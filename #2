#include <iostream>

using namespace std;


float pow_Recursion(int Count, int Power)
{
    if (!Power) return 1;
    else if (Power < 0) return 1 / pow_Recursion(Count, -Power);
    else return Count * pow_Recursion(Count, --Power);
}

int main()
{
    int Power = 0, Count = 0;
    cout << "Vvedite count:" << endl;
    cin >> Count;
    cout << "Vvedite Power:" << endl;
    cin >> Power;

    cout << pow_Recursion(Count, Power) << std::endl;
    system("pause");
    return false;
}
